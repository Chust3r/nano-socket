{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"outDir": "dist",
		"rootDir": "src",
		"types": ["node"],
		"declaration": true,
		"sourceMap": true,
		"baseUrl": "./src",
		"paths": {
			"~core/*": ["core/*"],
			"~middleware/*": ["middleware/*"],
			"~utils/*": ["utils/*"],
			"~types": ["types.ts"],
			"~managers/*": ["managers/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
